<div class="items-container">
  <% @reviews.each do |review| %>
  <div class="item-card">
    <h2>Title: <%= review.title %></h2>
    <p>Item: <%= Item.find(review.item_id).item_name %>
    <p>Description: <%= review.description %></p>
    <p>Rating: <%= review.rating %></p>
    <%= link_to 'Edit Review', edit_profile_review_path(review), id: "button" %>
    <%= link_to 'Delete Review', profile_review_path(review), method: :delete, id: "button" %>
  </div>
  <% end %>
</div>
