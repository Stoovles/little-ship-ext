<h1>Create New Item</h1>
<div class="welcome-login">

<!-- <div class="row"> -->
  <!-- <div class="col-md-6 col-md-offset-3"> -->
    <%= form_for [:profile, @review], url: {action: "create"} do |f| %>
      <%= f.error_messages %>

      <%= f.label :title %>
      <%= f.text_field :title, :required => true%>

      <%= f.label :description %>
      <%= f.text_area :description, :required => true %>

      <%= f.label :rating %>
      <%= f.text_field :rating%>

      <%= f.hidden_field :item_id, value: params['item_id'] %>
      <%= f.hidden_field :order, value: params['order'] %>
      

      <%= f.submit "Create Review", id: "medium-button" %>

    <% end %>
</div>
